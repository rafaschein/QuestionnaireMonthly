@model QuestionnaireMonthly.Domain.Answer

@{
    ViewBag.Title = "Answer";
}

<h2>Answer</h2>


@using (Html.BeginForm("Answer", "Answer"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Html.DisplayFor(model => model.Question.Description)</h4>
        <hr />
        @Html.ValidationSummary(true)
        
        @Html.HiddenFor(model => model.QuestionID, new { @Value = Model.QuestionID })
        @Html.HiddenFor(model => model.UserID, new { @Value = Model.UserID })

        <div class="form-group">
            @Html.LabelFor(model => model.Response, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Response, new { @Value = Model.Response })
                @Html.ValidationMessageFor(model => model.Response)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
